[Unit]
Description=Prometheus Postgres Exporter
After=network-online.target

[Service]
Environment=DATA_SOURCE_NAME="user={{ postgres_exporter_connection_user }} host={{ postgres_exporter_connection_host }} sslmode={{ postgres_exporter_connection_ssl_mode }}"
User=prometheus
Restart=on-failure
WorkingDirectory=/home/prometheus/postgres_exporter/{{ postgres_exporter_version }}/postgres_exporter
ExecStart=/home/prometheus/postgres_exporter/{{ postgres_exporter_version }}/postgres_exporter/postgres_exporter

[Install]
WantedBy=multi-user.target
